generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum PriorityType {
  URGENT
  HIGH
  LOW
  MEDIUM
}


model User {
  id       String    @id @default(cuid())
  name     String
  email    String    @unique
  password String
  image    String?
  Project  Project[]
  assignedTasks Tasks[]
  Collaborations Collaboration[]
}

model Project {
  id          String   @id @default(cuid())
  title       String
  description String?
  createdAt   DateTime @default(now())
  expiresAt   DateTime
  userId      String
  User        User     @relation(fields: [userId], references: [id])
  Tasks       Tasks[]
  Collaborators Collaboration[]
}

model Collaboration {
  id          String    @id @default(cuid())
  userId      String
  projectId   String
  User        User     @relation(fields: [userId], references: [id])
  Project     Project  @relation(fields: [projectId], references: [id])  

  @@unique([userId, projectId])
}

model Tasks {
  id          String   @id @default(cuid())
  title       String
  description String
  priority    PriorityType
  createdAt   DateTime @default(now())
  expiresAt   DateTime
  projectId   String
  userId      String
  assignId    String?
  Project     Project  @relation(fields: [projectId], references: [id])
  assignedTo  User?     @relation(fields: [assignId], references: [id])
}
